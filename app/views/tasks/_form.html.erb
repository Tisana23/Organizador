  </div>
  <div>
    <%= t.label :descrption %>
    <%= t.text_area :description, rows: 20 %>
  </div>
  <div>
    <%= t.label :due_date %>
    <%= t.date_field :due_date %>
  </div>
  
  <div>
    <%= t.label :Categoria %>
