  <div>
    <div class="form-group">
      <%= t.fields_for :participating_users do |participant| %>
          <%= render 'participating_user_fields', f: participant %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'AÃ±adir Participante', t, :participating_users %>
      </div>
